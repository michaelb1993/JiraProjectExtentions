<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>

    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="jpext"/>

    <ao key="ao-module">
        <description>The module configuring the Active Objects service used by this plugin</description>
        <entity>com.michabond.ao.User</entity>
        <entity>com.michabond.ao.Subscription</entity>
    </ao>
    
    <!-- add our web resources -->
    <web-resource key="jpext-resources" name="jpext Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        <resource type="download" name="images/" location="/images"/>
        <context>jpext</context>
    </web-resource>

    <web-resource key="jpext-resources--project-panel" name="jpext Web Resources for Project Panel">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        <dependency>com.atlassian.auiplugin:aui-select2</dependency>
        <dependency>com.atlassian.auiplugin:aui-inline-dialog2</dependency>
        <dependency>com.atlassian.auiplugin:aui-experimental-soy-templates</dependency>
        <transformation extension="soy">
            <transformer key="soyTransformer">
                <functions>com.atlassian.confluence.plugins.soy:soy-core-functions</functions>
            </transformer>
        </transformation>
        <!--soy-->
        <resource type="download" name="project-panel-closures-soy.js"
                  location="templates-soy/project-panel-closures.soy"/>
        <!--javascript-->
        <resource type="download" name="project-panel.js"
                  location="/js/project-panel.js"/>
        <!--css-->
        <resource type="download" name="project-panel.css"
                  location="/css/project-panel.css"/>
        <!--template-->
        <resource type="download" name="project-panel.vm"
                  location="/templates/project-panel.vm"/>
        <context>jpext</context>
        <context>atl.general</context>
    </web-resource>

    <rest name="Jira Project Extensions Resources" i18n-name-key="jpext.rest.resources.name" key="jpext-rest-resources" path="/jpext" version="1.0">
        <description key="jpext.rest.resources.description">All Kitchen Duty REST Resources</description>
        <package>com.michabond.rest</package>
    </rest>

    <!-- Project Centric Panel -->
    <web-item key="jpext-projectcentric-panel" i18n-name-key="projectcentricpanel.jpext.name" section="jira.project.sidebar.plugins.navigation" weight="310">
        <label>JPEXT Web Panel</label>
        <link>/projects/$pathEncodedProjectKey?selectedItem=com.atlassian.jira.jira-projects-plugin:project-panel</link>
        <param name="iconClass" value="aui-icon aui-icon-small aui-iconfont-file-code"/>
    </web-item>

    <web-panel key="jpext-projectcentric-panel-key" location="com.atlassian.jira.jira-projects-plugin:project-panel">
        <resource type="velocity" name="view" location="templates/project-panel.vm" />
        <!--<context-provider class="com.jtricks.ui.tabs.context.ProjectPanelContextProvider"/>-->
    </web-panel>
    
</atlassian-plugin>